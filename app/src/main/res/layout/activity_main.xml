<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:progress="10"
            android:progressTint="@color/color2" />

        <RelativeLayout
            android:outlineAmbientShadowColor="@color/color3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/color5">

            <TextView
                android:id="@+id/textsoruNumarasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Soru Numaraıs : "
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textDerece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Derece : "
                android:textColor="#000"
                android:textSize="15dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSoruYaz"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:background="@color/color5"
                android:gravity="center"
                android:text="1 + 7 = ?"
                android:textColor="@color/siyah"
                android:textSize="25dp"
                android:textFontWeight="600"/>

            <EditText
                android:id="@+id/edittextCevap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:numeric="integer"
                android:hint="Örnek cevap metni"
                android:shadowColor="@color/color4"
                tools:ignore="Deprecated" />

            <Button
                android:id="@+id/btnCevapla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/color2"
                android:text="Cevapla"
                android:textColor="@color/beyaz" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>